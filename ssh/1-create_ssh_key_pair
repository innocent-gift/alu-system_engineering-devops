#!/usr/bin/env bash

# Generate RSA key pair with 4096 bits, private key named 'school', and passphrase 'betty'
ssh-keygen -t rsa -b 4096 -f ~/.ssh/school -N "betty"

# Display the generated files
echo "Your identification has been saved in school."
echo "Your public key has been saved in school.pub."

# Show the fingerprint (similar to example output)
echo "The key fingerprint is:"
ssh-keygen -lf ~/.ssh/school | awk '{print $2}'

# Show randomart image (similar to example output)
echo "The key's randomart image is:"
ssh-keygen -lvf ~/.ssh/school | grep -A 9 "randomart"
